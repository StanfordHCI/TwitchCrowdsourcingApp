<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/clockLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal" >
	        <com.twitch.homescreenlock.CustomDigitalClock
		        android:id="@+id/customDigitalClock1"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="70dp"
		        android:gravity="center"
		        android:text="DigitalClock"
		        android:textSize="40dp" />
	        <ImageButton
            android:id="@+id/imageButtonInfo"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/infobutton" />    
    </LinearLayout>
    
    
    <ScrollView
        android:id="@+id/stw_app_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="visible" >
        
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >
        
	    <LinearLayout
	        android:id="@+id/stw_header_layout"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:layout_marginTop="5dp"
	        android:layout_marginLeft="5dp"
	        android:orientation="vertical" >
	        
	        <TextView
	            android:id="@+id/stw_main_header"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:gravity="left"
	            android:text="Structuring the Web"
	            android:textSize="22sp" />
	    </LinearLayout>
	    
	    
	    
	    <LinearLayout
	        android:id="@+id/stw_body_layout"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5dp"
	        android:layout_marginRight="5dp"
	        android:layout_marginTop="12dp"
	        android:gravity="center"
	        android:orientation="vertical" >
	    
		    <LinearLayout
		        android:id="@+id/extractionLayout"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="4dp"
		        android:background="#3D3D3D"
		        android:gravity="center" >
		        
			    <TextView
			        android:id="@+id/stw_sentence"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:layout_margin="5dp"
			        android:gravity="left"
			        android:textColor="#B0B0B0"
			        android:text="Stanford University was founded in 1885 by Leland Stanford as a memorial to their son"
			        android:textAppearance="?android:attr/textAppearanceMedium" />
		    </LinearLayout>
		    
		    
		    
		    <LinearLayout
		        android:id="@+id/STW_query_response_layout"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="8dp"
		        android:gravity="center"
		        android:orientation="horizontal" >
		
		        <TextView
		            android:id="@+id/stw_extraction"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:gravity="left"
		            android:text="Stanford University was founded in 1885"
		            android:textSize="29sp"
		            android:textAppearance="?android:attr/textAppearanceLarge" />
	
		    </LinearLayout>
		    
	
		</LinearLayout>
		
	    
	    <LinearLayout
	        android:id="@+id/STW_images_layout"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="15dp"
	        android:gravity="center"
	        android:orientation="horizontal" >
	
	        
	        <ImageButton
	            android:id="@+id/imageButtonRight"
	            android:layout_width="80dp"
	            android:layout_height="80dp"
	            android:gravity="center"
	            android:background="@drawable/rightunfilled" />
	         <TextView
	            android:id="@+id/textViewSpace5"
	            android:layout_width="50dp"
	            android:layout_height="wrap_content"
	            android:gravity="center"
	            android:text=""
	            android:textAppearance="?android:attr/textAppearanceLarge" />
	         <ImageButton
	            android:id="@+id/imageButtonWrong"
	            android:layout_width="80dp"
	            android:layout_height="80dp"
	            android:gravity="center"
	            android:background="@drawable/wrongunfilled" />
	        
	    </LinearLayout>
	</LinearLayout>
    </ScrollView>
    
    
    
    <ScrollView
        android:id="@+id/stw_explanation_scrollview"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:visibility="gone" >
    
	    <LinearLayout
	        android:id="@+id/stw_explanation_layout"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:orientation="vertical" >
		    
	        <TextView
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_margin="5dp"
	            android:gravity="left"
	            android:text="@string/STW_explanation1"
	            android:textSize="18sp" />
	        
	        <LinearLayout
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:background="@drawable/border"
	            android:layout_marginLeft="3dp"
	            android:layout_marginRight="3dp"
	            android:gravity="center"
	            android:orientation="vertical" >
		        <LinearLayout
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:layout_margin="5dp"
			        android:background="#3D3D3D"
			        android:gravity="center" >
				    <TextView
				        android:id="@+id/stw_demo1_sentence"
				        android:layout_width="fill_parent"
				        android:layout_height="wrap_content"
				        android:layout_margin="5dp"
				        android:gravity="left"
				        android:textColor="#B0B0B0"
				        android:text="Replace with sentence 1"
				        android:textAppearance="?android:attr/textAppearanceMedium" />
			    </LinearLayout>
		        <LinearLayout
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:layout_margin="5dp"
			        android:gravity="center"
			        android:orientation="horizontal"
			        android:weightSum="1" >
				    <LinearLayout 
				        android:layout_width="0dp" android:layout_height="wrap_content"
				        android:layout_weight="0.775">
			        <TextView
			            android:id="@+id/stw_demo1_extraction"
			            android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
			            android:gravity="left"
			            android:text="Replace with extraction 1"
			            android:textSize="32sp" /></LinearLayout>
					<LinearLayout 
					    android:layout_width="0dp" android:layout_height="wrap_content" 
					    android:layout_weight="0.225" android:gravity="right">
			        <ImageButton
			            android:layout_width="60dp"
			            android:layout_height="60dp"
			            android:background="@drawable/rightunfilled" /></LinearLayout>
			    </LinearLayout>
		    </LinearLayout>
	        
	        <TextView
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="5dp"
	            android:layout_marginRight="5dp"
	            android:layout_marginBottom="5dp"
	            android:layout_marginTop="30dp"
	            android:gravity="left"
	            android:text="@string/STW_explanation2"
	            android:textSize="18sp" />
	        
	        <LinearLayout
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:background="@drawable/border"
	            android:layout_marginLeft="3dp"
	            android:layout_marginRight="3dp"
	            android:gravity="center"
	            android:orientation="vertical" >
		        <LinearLayout
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:layout_margin="5dp"
			        android:background="#3D3D3D"
			        android:gravity="center" >
				    <TextView
				        android:id="@+id/stw_demo2_sentence"
				        android:layout_width="fill_parent"
				        android:layout_height="wrap_content"
				        android:layout_margin="5dp"
				        android:gravity="left"
				        android:textColor="#B0B0B0"
				        android:text="Replace with sentence 2"
				        android:textAppearance="?android:attr/textAppearanceMedium" />
			    </LinearLayout>
		        <LinearLayout
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:layout_margin="5dp"
			        android:gravity="center"
			        android:orientation="horizontal"
			        android:weightSum="1" >
				    <LinearLayout 
				        android:layout_width="0dp" android:layout_height="wrap_content"
				        android:layout_weight="0.775">
			        <TextView
			            android:id="@+id/stw_demo2_extraction"
			            android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
			            android:gravity="left"
			            android:text="Replace with extraction 2"
			            android:textSize="32sp" /></LinearLayout>
					<LinearLayout 
					    android:layout_width="0dp" android:layout_height="wrap_content" 
					    android:layout_weight="0.225" android:gravity="right">
			        <ImageButton
			            android:layout_width="60dp"
			            android:layout_height="60dp"
			            android:background="@drawable/wrongunfilled" /></LinearLayout>
			    </LinearLayout>
		    </LinearLayout>
	        
	        <TextView
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="5dp"
	            android:layout_marginRight="5dp"
	            android:layout_marginBottom="5dp"
	            android:layout_marginTop="30dp"
	            android:gravity="left"
	            android:text="@string/STW_explanation3"
	            android:textSize="18sp" />
	        
	        <LinearLayout
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:background="@drawable/border"
	            android:layout_marginLeft="3dp"
	            android:layout_marginRight="3dp"
	            android:gravity="center"
	            android:orientation="vertical" >
		        <LinearLayout
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:layout_margin="5dp"
			        android:background="#3D3D3D"
			        android:gravity="center" >
				    <TextView
				        android:id="@+id/stw_demo3_sentence"
				        android:layout_width="fill_parent"
				        android:layout_height="wrap_content"
				        android:layout_margin="5dp"
				        android:gravity="left"
				        android:textColor="#B0B0B0"
				        android:text="Replace with sentence 3"
				        android:textAppearance="?android:attr/textAppearanceMedium" />
			    </LinearLayout>
		        <LinearLayout
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:layout_margin="5dp"
			        android:gravity="center"
			        android:orientation="horizontal"
			        android:weightSum="1" >
				    <LinearLayout 
				        android:layout_width="0dp" android:layout_height="wrap_content"
				        android:layout_weight="0.775">
			        <TextView
			            android:id="@+id/stw_demo3_extraction"
			            android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
			            android:gravity="left"
			            android:text="Replace with extraction 3"
			            android:textSize="32sp" /></LinearLayout>
					<LinearLayout 
					    android:layout_width="0dp" android:layout_height="wrap_content" 
					    android:layout_weight="0.225" android:gravity="right">
			        <ImageButton
			            android:layout_width="60dp"
			            android:layout_height="60dp"
			            android:background="@drawable/wrongunfilled" /></LinearLayout>
			    </LinearLayout>
		    </LinearLayout>
	        
	        <Button
	            android:id="@+id/STW_explanation_done"
	            android:layout_width="75dp"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="6dp"
	            android:gravity="center_horizontal|center_vertical"
	            android:text="Done" />
	        
		
	    </LinearLayout>
	</ScrollView>
</LinearLayout>